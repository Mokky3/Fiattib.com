{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/terms.html",
        "destination": "/terms.html"
      },
      {
        "source": "/privacy",
        "destination": "/privacy.html"
      },
      {
        "source": "/maintenance",
        "destination": "/maintenance.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
